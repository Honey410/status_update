
<div class="text-center mt-5">
  <h4><%= @status.date %>'s Task</h4>
</div>
<div class="container">
  <div class="form-group shadow pt-3 pl-3 pb-3 pr-3 bg-light rounded flex-column d-flex" >
    <table border="1">
      <tr>
        <th> Task_Name </th>
        <th> PR_Link </th>
        <th> Hours_Spent </th>
      </tr>
      <% @tasks.each do |task| %>
        <tr>
          <td> <%= task.name %> </td>
          <td> <%= link_to task.pr, task.pr  %> </td>
          <td> <%= task.houes %> </td>
        </tr>
      <% end %>
       </table>
  </div>
</div>

<div class="text-center mt-5">
  <h3><%= link_to 'Back to board',root_path, class:"btn btn-outline-secondary btn-sm ms-2 mb-3" %></h3>
</div>